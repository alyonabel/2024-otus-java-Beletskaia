select * from answer a ;

select * from question q ;

CREATE TABLE test (
  id SERIAL PRIMARY KEY,
  question_id INT NOT NULL,
  first_ans INT NOT NULL,
  second_ans INT NOT NULL,
  third_ans INT NOT NULL,
  CONSTRAINT fk_question FOREIGN KEY(question_id) REFERENCES question(id),
  CONSTRAINT fk_first_ans FOREIGN KEY(first_ans) REFERENCES answer(id),
  CONSTRAINT fk_second_ans FOREIGN KEY(second_ans) REFERENCES answer(id),
  CONSTRAINT fk_third_ans FOREIGN KEY(third_ans) REFERENCES answer(id)
);

select * from test t ;

INSERT INTO test (question_id,first_ans,second_ans,third_ans) VALUES
