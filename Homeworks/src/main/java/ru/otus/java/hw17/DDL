CREATE TABLE answer (
  id SERIAL PRIMARY KEY,
  answer VARCHAR(100) NOT null
);

CREATE TABLE question (
  id SERIAL PRIMARY KEY,
  question VARCHAR(255) NOT NULL,
  answer_id INT NOT NULL,
  CONSTRAINT fk_answer FOREIGN KEY(answer_id) REFERENCES answer(id)
);

INSERT INTO answer(answer) VALUES('Red');
INSERT INTO answer(answer) VALUES('Orange');
INSERT INTO answer(answer) VALUES('Yellow');
INSERT INTO answer(answer) VALUES('Green');
INSERT INTO answer(answer) VALUES('Blue');
INSERT INTO answer(answer) VALUES('Indigo');
INSERT INTO answer(answer) VALUES('Violet_');

UPDATE answer
SET answer = 'Violet'
WHERE answer = 'Violet_';

